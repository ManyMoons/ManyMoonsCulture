<!-- Main hero unit for a primary marketing message or call to action -->
.hero-unit
  %h2= t :'home.hero.title'
  %p= t :'home.hero.desc'
  %p 
    %a.btn.btn-primary.btn-large 
      = t :'home.hero.button'
      &raquo;

<!-- Example row of columns -->
.row
  .span4
    %h2= t :'home.heading1.title'
    %p= t :'home.heading1.desc'
    %p
      %a.btn(href="#")= t :'home.heading1.button_html'
  .span4
    %h2= t :'home.heading2.title'
    %p= t :'home.heading2.desc'
    %p
      = link_to t(:'home.heading1.button_html'), exchange_url, { :class => 'btn' }
  .span4
    %h2= t :'home.heading3.title'
    %p= t :'home.heading3.desc'
    %p
      %a.btn(href="#")= t :'home.heading3.button_html'
