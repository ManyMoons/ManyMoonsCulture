      = link_to t(:'home.heading1.button_html'), admissions_url, { :class => 'btn' }
  .span4
    %h2= raw(t :'home.heading2.title')
    %p= t :'home.heading2.desc'
    %p
      = link_to t(:'home.heading1.button_html'), exchange_url, { :class => 'btn' }
