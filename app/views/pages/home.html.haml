<!-- Main hero unit for a primary marketing message or call to action -->
.hero-unit
  %h2= t :'home.hero.title'
  %p= t :'home.hero.desc'
  %p 
    = link_to t(:'home.hero.button_html'), admissions_url, { :class => 'btn btn-primary btn-large' }

